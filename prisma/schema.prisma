generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Opportunity {
  id          Int           @id @default(autoincrement())
  title       String
  description String
  Application Application[]
}

model Application {
  id           Int         @id @default(autoincrement())
  email        String
  linkedin     String
  oportunityId Int
  oportunity   Opportunity @relation(fields: [oportunityId], references: [id])
}
